    <servlet>
        <servlet-name>AuthenticationServlet</servlet-name>
        <servlet-class>ru.ncedu.jsphometask.servlets.AuthenticationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AuthenticationServlet</servlet-name>
        <url-pattern>/authentication</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>ru.ncedu.jsphometask.servlets.RegistrationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginJspPage</servlet-name>
        <jsp-file>/pages/login.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginJspPage</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegisterJspPage</servlet-name>
        <jsp-file>/pages/registration.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterJspPage</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>HelloJspPage</servlet-name>
        <jsp-file>/pages/hello.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>HelloJspPage</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>OopsJspPage</servlet-name>
        <jsp-file>/pages/oops.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>OopsJspPage</servlet-name>
        <url-pattern>/oops</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GoodbyeServlet</servlet-name>
        <servlet-class>ru.ncedu.jsphometask.servlets.GoodbyeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GoodbyeServlet</servlet-name>
        <url-pattern>/goodbye</url-pattern>
    </servlet-mapping>


</web-app>
